<div>
    <p>Title: @((MarkupString)Movie.Title)</p>
    <p>ReleaseDate: @Movie.ReleaseDate.ToString("dd MM yyyy")</p>
    @if (DisplayButtons == true)
    {
        <div>
            <button @onclick="@Delete">Delete</button>
        </div>
    }
</div>

@code {

    [Parameter] public Movie Movie { get; set; }
    [Parameter] public bool DisplayButtons { get; set; } = false;

    void Delete()
    {
        Console.WriteLine($"Deleted: {Movie.Title} ");

    }

}
