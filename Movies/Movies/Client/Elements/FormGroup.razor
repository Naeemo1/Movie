<div class="form-group mx-sm-3 mb-2">
    <label class="form-check-label" for="@Id">
        @Title
    </label>
    @ChildContent
</div>

@code {
    [Parameter]
    public string Title { get; set; }
    [Parameter]
    public RenderFragment ChildContent { get; set; }
    [Parameter]
    public string Id { get; set; } = $"_{Guid.NewGuid()}";

}